<div id="register">
        <h3 class="text-center text-white pt-5" id="shadow">Get started with .doetal</h3>
        <div class="container">
            <div id="register-row" class="row justify-content-center align-items-center">
                <div id="register-column" class="col-md-6 custom-background">
                    <div id="register-box" class="col-md-12">
                        <form id="register-form" class="form" action="/user/add" method="post">
                            <h3 class="text-center text-info text-dark">Register</h3>
                            {{> messages}}
                            <div class="form-group">
                                <label for="username" class="text-info text-dark">Enter Email Address:</label><br>
                                <input type="email" name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info text-dark">Enter Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
							<div class="form-group">
                                <label for="passwordConfirm" class="text-info text-dark">Confirm Password:</label><br>
                                <input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control">
                            </div>
                            <div id="register-link" class="form-group">
                               <a href="/">Already Have an Account?</a> 
                           </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn lnb-new-schedule-btn fullwidth" value="Submit">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>